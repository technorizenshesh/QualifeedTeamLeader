<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Defect ID : Suspect"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_16sdp"/>
            <TextView
                android:id="@+id/tvProductId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Worker ID : "
                android:textColor="@color/gray_light"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product ID : "
                android:textColor="@color/gray_light"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tvWorkerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date : 22/04/2022"
                android:textColor="@color/gray_light"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_10sdp"/>



        </LinearLayout>



        <ImageView
            android:layout_below="@+id/layoutMain"
            android:layout_width="match_parent"
            android:id="@+id/ivImg"
            android:layout_height="@dimen/_200sdp"/>


        <TextView
            android:id="@+id/tvDisTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/defect_discription"
            android:layout_below="@+id/ivImg"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"/>


        <TextView
            android:id="@+id/tvDiscription"
            android:layout_below="@+id/tvDisTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Worker ID : "
            android:textColor="@color/gray_light"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textSize="@dimen/_10sdp"/>





        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/_20sdp">

            <ImageView
                android:id="@+id/ivAccept"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_accept"/>


            <ImageView
                android:id="@+id/ivCancel"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_toLeftOf="@+id/ivAccept"
                android:src="@drawable/ic_cancel" />

        </RelativeLayout>


    </RelativeLayout>
</layout>
