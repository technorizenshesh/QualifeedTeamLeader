<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <LinearLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvWorkName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product ID : 3"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/_16sdp"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tvWorkerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Worker ID : "
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvTeamId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Repair Time : 00:05"
                    android:layout_toRightOf="@+id/tvWorkerId"
                   android:layout_toLeftOf="@+id/tvStatus"
                     android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/gray_light"
                    android:textSize="@dimen/_10sdp" />




                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Block"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:background="@color/color_red"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"/>



            </RelativeLayout>





        </LinearLayout>





    </LinearLayout>
</layout>